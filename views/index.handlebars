<body>
<div class="app-area">
  <div class="title-area">
  <h1>Heart Disease Simulator</h1>
  </div>

<div class="hot-food">
<h2>Hot Food</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
<div class="cook-area">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    {{!-- <label for="devoured"></label><br> --}}
    <input type="radio" name="devoured" value="1" checked> Hot<br>
    {{!-- <input type="radio" name="devoured" value="0"> Devoured --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

</div>

<div class="devoured-area">
<h2>Food in Arteries</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
<div class="points-area">
  <h2>Heart Disease Points</h2>
  <div id="points-display"><p>0</p>
  </div>
</div>
</div>

</div>
</body>